<div class="container">
    
    <div class="row">
		<div class="col-sm-12">
			<img src="/assets/img/burger.png" alt="burger" class="img-responsive center-block">
		</div>	
	</div>
    
    <div class="row">
        <div class="col-sm-12 text-center">
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-6">          
            <ul>
                {{#each burgers}} 
                    {{#unless this.devoured}}
                        <li>
                            {{this.id}}. {{this.burger_name}}
                            <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="1">
                                <button class="btn" type="submit">Devour It!</button>
                            </form>
                        </li>
                    {{/unless}} 
                {{/each}}
            </ul>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-6">     
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                         <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
		<div class="col-sm-12 text-center">
			<form class="create-update-form" action="burgers/insertOne" method="POST">
				<div class="form-group mx-sm-3 mb-2">
                    <input type="text" class="form-control" placeholder="Burger">
                    <br>
                    <button class="btn btn-primary" type="submit">Submit</button>
					<br>
                    <h2>Enter a burger you want to eat and Click the "Submit" button.</h2>
				</div>
			</form>
		</div>
    </div>
</div>