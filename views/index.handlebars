<div class="container">
    <div class="row">
        <div class="col-sm-6">
            
            <ul>
                {{#each burgers}} 
                    {{#unless this.devoured}}
                        <li>
                            {{this.id}}. {{this.burger_name}}
                            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="1">
                                <button class="btn" type="submit">Devour It!</button>
                            </form>
                        </li>
                    {{/unless}} 
                {{/each}}
            </ul>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-6">     
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                         <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">

		<div class="col-sm-12 text-center">
			<form class="create-update-form" action="burgers/create" method="POST">
				<div class="form-group">
					<textarea type="text" name="name"></textarea>
                    <button class="btn btn-default" type="submit">Submit</button>
					<h5 class="text-center">Enter a burger you want to eat and Click the "Submit" button.</h5>
				</div>
			</form>
		</div>
</div>